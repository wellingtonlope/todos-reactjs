{
  "parser": "babel-eslint",
  "env": {
    "browser": true,
    "jest": true
  },
  "plugins": ["react", "jsx-a11y", "import"],
  "extends": "airbnb",
  "rules": {
    "react/jsx-filename-extension": [
      "error",
      {
        "extensions": [".js", ".jsx"]
      }
    ],
    "global-require": "off",
    "import/prefer-default-export": "off",
    "import/no-named-as-default": "off",
    "no-shadow": "off",
    "react/prop-types": "off",
    "no-unused-expressions": ["error", { "allowTaggedTemplates": true }]
  }
}
